pkgname=fix-light-indicator-gap
pkgver=1.0.0
pkgrel=0
_author="rmitchellscott"
_author_url="https://github.com/rmitchellscott"
pkgdesc="Removes the gap reserved for the frontlight icon when the light is off on Paper Pro and Paper Pro Move."
url="https://github.com/rmitchellscott/xovi-qmd-extensions"
arch="noarch"
license="MIT"
depends="xovi-qt-resource-rebuilder remarkable-os>=3.24 rmpp | rmppm"
source="
fixLightIndicatorGap.qmd::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/3.24/fixLightIndicatorGap.qmd
LICENSE::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/LICENSE
"
options="!check !fhs"
sha512sums="
ac832d12c12dc51388315419fa86d9261afcf239c2c24ddb1fb7897c8ef9f36d250e8d34edcf0120a80a8231f51342550871f23061faf78194ed18b0a3686a0e
SKIP
"

package() {
    install -Dm644 "$srcdir/fixLightIndicatorGap.qmd" \
        "$pkgdir/home/root/xovi/exthome/qt-resource-rebuilder/fixLightIndicatorGap.qmd"

    mkdir -p "$pkgdir/home/root/.vellum/licenses/$pkgname"
    install -Dm644 "$srcdir/LICENSE" \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/LICENSE"
    echo "https://github.com/rmitchellscott/xovi-qmd-extensions" > \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/SOURCES"
}
