# Maintainer: Mitchell Scott <mitchell@scottlabs.io>
pkgname=quicksettings-screenshot
pkgver=1.0.0
pkgrel=0
_author="rmitchellscott"
_author_url="https://github.com/rmitchellscott"
pkgdesc="Adds a screenshot button to the quick settings menu."
url="https://github.com/rmitchellscott/xovi-qmd-extensions"
arch="noarch"
license="MIT"
depends="xovi-qt-resource-rebuilder remarkable-os>=3.24 rm-shot"
source="
quickSettingsScreenshot.qmd::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/3.24/quickSettingsScreenshot.qmd
LICENSE::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/LICENSE
"
options="!check !fhs"
sha512sums="
f1fd56414a2064d16018565e81623205fa3c58b8bee64eb62887462724a7db29810da48152aab318aa424ef22dcbf8f0c27f776e8246aa4ea4876a4e842368ec
SKIP
"

package() {
    install -Dm644 "$srcdir/quickSettingsScreenshot.qmd" \
        "$pkgdir/home/root/xovi/exthome/qt-resource-rebuilder/quickSettingsScreenshot.qmd"

    mkdir -p "$pkgdir/home/root/.vellum/licenses/$pkgname"
    install -Dm644 "$srcdir/LICENSE" \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/LICENSE"
    echo "https://github.com/rmitchellscott/xovi-qmd-extensions" > \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/SOURCES"
}
