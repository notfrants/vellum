# Maintainer: Mitchell Scott <mitchell@scottlabs.io>
pkgname=mini-light-sleep
pkgver=1.0.0
pkgrel=0
_author="rmitchellscott"
_author_url="https://github.com/rmitchellscott"
pkgdesc="Replaces the light sleep banner with text saying "Sleeping" at the top right of the screen"
url="https://github.com/rmitchellscott/xovi-qmd-extensions"
arch="noarch"
license="MIT"
depends="xovi-qt-resource-rebuilder remarkable-os>=3.24"
source="
miniLightSleep.qmd::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/3.24/miniLightSleep.qmd
LICENSE::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/LICENSE
"
options="!check !fhs"
sha512sums="
bab6025c5ecef3089d9a6e795dca7edd6e002b4faf892449c576194013939439d070ac6d1a9a0c8709be703d93cabfaa7ffacd5b9cb27add7d6e5d81a1d9ef50
SKIP
"

package() {
    install -Dm644 "$srcdir/miniLightSleep.qmd" \
        "$pkgdir/home/root/xovi/exthome/qt-resource-rebuilder/miniLightSleep.qmd"

    mkdir -p "$pkgdir/home/root/.vellum/licenses/$pkgname"
    install -Dm644 "$srcdir/LICENSE" \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/LICENSE"
    echo "https://github.com/rmitchellscott/xovi-qmd-extensions" > \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/SOURCES"
}
