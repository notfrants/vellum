pkgname=createpages-paperpro
pkgver=1.0.0
pkgrel=0
_author="rmitchellscott"
_author_url="https://github.com/rmitchellscott"
pkgdesc="Overrides new page creation to use Paper Pro dimensions."
url="https://github.com/rmitchellscott/xovi-qmd-extensions"
arch="noarch"
license="MIT"
depends="xovi-qt-resource-rebuilder remarkable-os>=3.24"
conflicts="createpages-rm2"
source="
createPagesPaperProSize.qmd::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/3.24/createPagesPaperProSize.qmd
LICENSE::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/LICENSE
"
options="!check !fhs"
sha512sums="
b0a19851ac8525e334be80258a520c07fe5aaa7e4e38bd2f85faf4dad1169dcc45d84ccc62ac44948e7bb1cf40a564f27ff118a2b51de85e0750480e7d0db599
SKIP
"

package() {
    install -Dm644 "$srcdir/createPagesPaperProSize.qmd" \
        "$pkgdir/home/root/xovi/exthome/qt-resource-rebuilder/createPagesPaperProSize.qmd"

    mkdir -p "$pkgdir/home/root/.vellum/licenses/$pkgname"
    install -Dm644 "$srcdir/LICENSE" \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/LICENSE"
    echo "https://github.com/rmitchellscott/xovi-qmd-extensions" > \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/SOURCES"
}
