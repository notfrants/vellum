pkgname=createpages-rm2
pkgver=1.0.0
pkgrel=0
_author="rmitchellscott"
_author_url="https://github.com/rmitchellscott"
pkgdesc="Overrides new page creation to use reMarkable 2 dimensions."
url="https://github.com/rmitchellscott/xovi-qmd-extensions"
arch="noarch"
license="MIT"
depends="xovi-qt-resource-rebuilder remarkable-os>=3.24"
conflicts="createpages-paperpro"
source="
createPagesRM2Size.qmd::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/3.24/createPagesRM2Size.qmd
LICENSE::https://raw.githubusercontent.com/rmitchellscott/xovi-qmd-extensions/main/LICENSE
"
options="!check !fhs"
sha512sums="
21cbbfa32dc11c31598b852c93c75f384b64009627a3ecaa04734c0f73ce2c5d7aa565e67e7da87288dcb49960abd860242d4715a98dd35668a51bff4ac40bd1
SKIP
"

package() {
    install -Dm644 "$srcdir/createPagesRM2Size.qmd" \
        "$pkgdir/home/root/xovi/exthome/qt-resource-rebuilder/createPagesRM2Size.qmd"

    mkdir -p "$pkgdir/home/root/.vellum/licenses/$pkgname"
    install -Dm644 "$srcdir/LICENSE" \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/LICENSE"
    echo "https://github.com/rmitchellscott/xovi-qmd-extensions" > \
        "$pkgdir/home/root/.vellum/licenses/$pkgname/SOURCES"
}
